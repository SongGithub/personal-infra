#!/usr/bin/env bash

dcr="docker-compose run --rm"

set -e

if [ "$#" -ne 4 ]; then
  echo "Usage: bin/deploy_cfn <cfn_path> <component_name> <env>"
  exit 1
fi

cfn_path=$1
component_name=$2
env=$3

$dcr stackup personal-infra-"$env"-"$component_name" up \
    -t "$cfn_path"/"$component_name"/template.yaml \
    -p params/"$env".yaml
